.__DUCKWEED_DEVTOOL__
  font-family Arial, Helvetica, sans-serif
  font-size 16px
  line-height 120%

.__DUCKWEED_DEVTOOL__ *
  box-sizing border-box
  font-size 100%
  font-style normal
  list-style none
  margin 0
  padding 0
  text-decoration none

.panelButton
  background rgba(0, 0, 0, 0.3)
  border none
  border-top-left-radius 4px
  bottom 0
  color white
  cursor pointer
  padding 4px 10px
  position fixed
  right 0
  z-index 5001

.panelContents
  background transparentify(white, 0.8)
  bottom 0
  box-shadow 0 0 10px transparentify(black, 0.3)
  height 30vh
  left 0
  overflow hidden
  padding 1rem
  position fixed
  right 0
  transition all
  z-index 5000
