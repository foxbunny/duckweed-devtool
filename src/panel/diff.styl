.diffPane
  max-height calc(30vh - 32px)
  overflow-y auto
  padding 1rem 0.5rem;

.breadcrumbs
  border-bottom 1px solid #ddd
  margin-bottom 0.2rem
  padding-bottom 0.2rem

.crumbButton
  background-color: transparent
  background-size cover
  cursor pointer
  height 18px
  margin-right 0.5rem
  overflow hidden
  text-indent -100vw
  width 18px

.toRoot
  background-image url("icons/up-fast.svg")

.upOne
  background-image url("icons/up.svg")

.crumb
  cursor pointer
  display inline-block
  font-family monospace
  padding 0.1rem 0.4rem

  &:hover
    text-decoration underline

  &::before
    content "."

.keyVal
  display flex
  font-family monospace
  justify-content space-between
  margin: 0.25rem 0

.key
  display inline-block
  width 10rem

.val
  display inline-flex
  justify-content space-between
  overflow hidden
  width 100%

.expandObject
  background transparentify(black, 0.6)
  border-radius 3px
  color #889900
  cursor pointer
  display inline-block
  margin-right 0.3rem
  padding 0.1rem 0.2rem

  &hover
    color white

.preview
  display inline-block
  opacity 0.5
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  width 100%

.ident
  color inherit

.update
  color #5a26a8

.add
  color #83a826

.del
  color #a82626
  text-decoration line-through
